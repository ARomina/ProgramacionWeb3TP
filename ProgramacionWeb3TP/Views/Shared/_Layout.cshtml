<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Taskie</title>
    <!--<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />-->
    <!-- Estilos propios -->
    <link href="~/Content/customStyles.css" rel="stylesheet" type="text/css" />

    <!-- Tema personalizado -->
    <link href="~/Content/customTheme.css" rel="stylesheet" type="text/css" />

    <!--<link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />-->
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-default navbar-doublerow navbar-trans navbar-fixed-top">
        <!-- top nav -->
        <nav class="navbar navbar-top hidden-xs">
            <div class="container">
                <!-- left nav top -->
                <ul class="nav navbar-nav pull-left">

                    @Html.ActionLink("Taskie", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                </ul>
                <!-- right nav top -->
                <ul class="nav navbar-nav pull-right">
                    @Html.ActionLink("Comenzar", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })<!--Modificar estilo-->
                    @Html.ActionLink("¿Por qué Taskie?", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })<!--Modificar estilo-->
                    @Html.ActionLink("Contacto", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })<!--Modificar estilo-->
                </ul>
            </div>
            <div class="dividline light-grey"></div>

        </nav>


    </nav>

    @RenderBody()
    <footer class="footer">
        <hr />
        <p>&copy; @DateTime.Now.Year - Programación Web 3 - Equipo: Barraza, Miharu, Rapetti, Silva</p>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
