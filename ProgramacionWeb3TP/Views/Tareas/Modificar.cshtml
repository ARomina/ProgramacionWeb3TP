
@{
    ViewBag.Title = "Tarea - Modificar";
}

<!-- EN LOS PLACEHOLDER SE DEBERIA TRAER LOS DATOS REALES -->
<div class="container">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <h1 class="paddingLeftTitles">Tarea - Modificar</h1>
            <hr />
        </div>
    </div>
    <form action="/Tareas/ModificacionTarea/" method="POST">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="col-md-6 col-sm-12">
                    <div class="col-md-12 col-sm-12">
                        <label>Nombre</label>
                        <input type="text" name="Nombre" placeholder="Nombre" max="50" /><br />
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <select>
                            <option selected>Seleccione una carpeta</option>
                            <option>Carpeta A</option>
                            <option>Carpeta Z</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="col-md-12 col-sm-12">
                    <label>¿Completada?</label>
                    <input type="radio" name="Completada" value="1" /> Sí<br />
                    <input type="radio" name="Completada" value="2" /> No<br />
                </div>
                <div class="col-md-12 col-sm-12">
                    <label>Fecha límite</label>
                    <input type="text" name="Fecha límite" placeholder="Fecha límite" />
                </div>
                <div class="col-md-12 col-sm-12">
                    <label>Prioridad</label>
                    <select>
                        <option selected>Baja</option>
                        <option>Media</option>
                        <option>Alta</option>
                        <option>Urgente</option>
                    </select><br />
                </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="col-md-6 col-sm-12">
                    <div class="col-md-12 col-sm-12">
                        <label>Descripción</label>
                        <textarea cols="6" rows="4" name="Descripcion" maxlength="200"></textarea><br />
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <label>Adjuntos (5)</label>
                        <!-- NO SE COMO MOSTRAR LOS ADJUNTOS !? -->
                        <div>
                            <p>Adjunto 1</p>
                            <!-- ESTO CON UN ICONITO -->
                            <a href="#">Eliminar</a>
                        </div>
                        <div>
                            <p>Adjunto 1</p>
                            <!-- ESTO CON UN ICONITO -->
                            <a href="#">Eliminar</a>
                        </div>
                        <input type="file" name="RutaArchivo" value="Agregar adjunto" /><br />
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <label>Comentarios (2)</label>
                    <hr />
                    <div class="col-md-12 col-sm-12">
                        <p>Comentario 1</p><br />
                        <hr />
                        <p>Creado el 12/04/2018</p><br />
                        <!-- ESTO CON UN ICONITO -->
                        <a href="#">Eliminar</a>
                    </div>
                    <div class="col-md-12 col-sm-12">
                        <p>Comentario 2</p><br />
                        <hr />
                        <p>Creado el 12/04/2018</p><br />
                        <!-- ESTO CON UN ICONITO -->
                        <a href="#">Eliminar</a>
                    </div>
                    <input type="text" name="Texto" placeholder="Escribir comentario..." />
                </div>
            </div>
        </div>
    </form>
    <a class="col-md-2 col-sm-12 pull-right btn btn-primary" href="#" onclick="history.go(-1); return false;">Volver</a>
</div>