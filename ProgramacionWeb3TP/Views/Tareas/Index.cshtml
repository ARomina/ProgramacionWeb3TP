@model IEnumerable<ProgramacionWeb3TP.Models.Tarea>

@{
    ViewBag.Title = "Mis Tareas";
}

<div class="container">
    <div class="row profile">
        <div class="col-md-10 col-sm-12">
            <h2 class="paddingLeftTitles">Listado de tareas</h2>
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Nueva Tarea", "CrearNuevaTarea", null, new { @class = "btn-block btn btn-primary" })
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4">
                <a class="btn-block btn btn-info" href="/Tareas/Index/" class="btn">Mostrar todas las tareas</a>
            </div>
            <div class="col-md-4">
                <a class="btn-block btn btn-info" href="/Tareas/Index/0" class="btn">Mostrar solo tareas incompletas</a>
            </div>
            <div class="col-md-4">
                <a class="btn-block btn btn-info" href="/Tareas/Index/1" class="btn">Mostrar solo tareas completas</a>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdCarpeta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EstimadoHoras)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaFin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prioridad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Completada)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaCreacion)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCarpeta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                           @if (item.Descripcion == "" || item.Descripcion == null) {
                               <p>No hay descripción</p>
                           }
                           else {
                                 @Html.DisplayFor(modelItem => item.Descripcion)
                           }
                        </td>
                        <td>
                            @if (item.EstimadoHoras == null) {
                               <p>No hay estimado de horas</p>
                           }
                           else {
                                 @Html.DisplayFor(modelItem => item.EstimadoHoras)
                           }
                        </td>
                        <td>
                            @if (item.FechaFin == null) {
                               <p>No hay fecha límite</p>
                           }
                           else {
                                 @Html.DisplayFor(modelItem => item.FechaFin)
                           }
                        </td>
                        <td>
                            @switch(@item.Prioridad ){
                                case 0:
                                    <p>Sin prioridad</p>
                                    break;
                                case 1:
                                    <p>Urgente</p>
                                    break;
                                case 2:
                                    <p>Alta</p>
                                    break;
                                case 3:
                                    <p>Media</p>
                                    break;
                                case 4:
                                    <p>Baja</p>
                                    break;
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompletadaTexto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaCreacion)
                        </td>
                        <td>
                            @Html.ActionLink("Detalle", "Detalle", new { idTarea = item.IdTarea })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>

</div>