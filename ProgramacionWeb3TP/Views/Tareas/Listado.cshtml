@model IEnumerable<ProgramacionWeb3TP.Models.Tarea>

@{
    ViewBag.Title = "Listado";
}
<div class="container">
    <div class="row profile">
        <div class="col-md-10 col-sm-12">
            <h2 class="paddingLeftTitles">Listado</h2>
        </div>
        <div class="col-md-2 col-sm-12">
            @Html.ActionLink("Nueva Tarea", "Crear", new { idCarpeta = TempData["idCarpeta"] }, new { @class = "col-md-12 btn btn-primary" })
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IdCarpeta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EstimadoHoras)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaFin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Prioridad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Completada)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaCreacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuario.Nombre)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCarpeta)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstimadoHoras)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaFin)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Prioridad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompletadaTexto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaCreacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Usuario.NombreCompleto)
                        </td>
                        <td>
                            @Html.ActionLink("Detalle", "Detalle", new { idTarea = item.IdTarea })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    </div>