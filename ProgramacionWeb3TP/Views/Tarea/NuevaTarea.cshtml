
@{
    ViewBag.Title = "Crear Nueva Tarea";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <h1 class="paddingLeftTitles">Nueva Tarea</h1>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <form action="/Tarea/CreacionNuevaTarea/" method="POST">
                <div class="col-md-6 col-sm-12">
                    <label>Carpeta</label>
                    <select>
                        <option>Carpeta 1</option>
                        <option>Carpeta 2</option>
                    </select><br />
                    <label>Nombre</label>
                    <input type="text" name="Nombre" placeholder="Nombre" /><br />
                    <label>Prioridad</label>
                    <input type="number" name="Prioridad" placeholder="Prioridad" />
                    <label>Fecha límite</label>
                    <input type="text" name="Fecha límite" placeholder="Fecha límite" />
                </div>
                <div class="col-md-6 col-sm-12">
                    <label>Descripción</label>
                    <textarea cols="6" rows="4" name="Descripcion"></textarea><br />
                    <label>¿Completada?</label>
                    <input type="number" name="Completada" placeholder="¿Completada?" /><br />
                    <label>Adjuntos</label>
                    <input type="file" name="RutaArchivo" value="Agregar adjunto" /><br />
                    <label>Comentarios</label>
                    <input type="text" name="Texto" placeholder="Escribir comentario..." /><br />
                    <input type="submit" class="btn-primary" value="Crear nueva tarea" />
                </div>
                <a class="col-md-2 col-sm-12 btn btn-primary" href="#" onclick="history.go(-1); return false;">Volver</a>
            </form>
        </div>
    </div>
</div>

